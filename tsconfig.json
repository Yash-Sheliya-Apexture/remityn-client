{
  "compilerOptions": {
    "baseUrl": ".", // Good for absolute paths
    "paths": {
      "@/*": ["./src/*"] // Standard Next.js path alias
    },
    "target": "es5", // Standard for browser compatibility
    "downlevelIteration": true, // Add this line
    "lib": ["dom", "dom.iterable", "esnext"], // Standard libs
    "allowJs": true, // Allows JS files
    "skipLibCheck": true, // CRUCIAL: Ignores type errors in .d.ts files in node_modules
    "strict": true, // Recommended for type safety
    "noEmit": true, // Next.js handles emission, this prevents TS from outputting JS
    "esModuleInterop": true, // Standard interop setting
    "module": "esnext", // Standard for modern JS
    "moduleResolution": "bundler", // Recommended for modern Node/bundler environments
    "resolveJsonModule": true, // Allows importing JSON files
    "isolatedModules": true, // Required for some transpilers/tools
    "jsx": "preserve", // Next.js handles JSX transformation
    "incremental": true, // Speeds up subsequent builds
    "plugins": [
      {
        "name": "next" // Next.js specific TS plugin
      }
    ]
  },
  "include": [ // Files TS should actively analyze for your project
    "next-env.d.ts",
    "**/*.ts", // Include all TS files
    "**/*.tsx", // Include all TSX files
    ".next/types/**/*.ts", // Include types generated by Next.js
    // Below are quite specific - are they necessary? Often covered by **/*.ts/tsx
     "src/app/auth/login/page.tsx", // Note: Extension is .JS - typo? Usually .js, .jsx, .ts, or .tsx
     "src/app/contexts/AuthContext.tsx", // Already covered by **/*.tsx
     "src/app/services/transfer.ts", // Already covered by **/*.ts
     "src/app/auth/forgot-password/page.tsx" // Already covered by **/*.tsx
, "src/app/components/layout/DashboardLayout.tsx", "src/app/services/exchangeRate.js"    ],
  "exclude": ["node_modules"] // CRUCIAL: Tells TS to ignore node_modules for compilation checks
}